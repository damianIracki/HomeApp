<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".views.addingTasksViews.AddTaskActivity">

    <EditText
        android:id="@+id/id_task_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:autofillHints="@string/task_name"
        android:backgroundTint="@color/colorBasicText"
        android:drawableStart="@drawable/ic_baseline_add_task_26"
        android:drawablePadding="10dp"
        android:hint="@string/task_name"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="@color/colorBasicText"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/id_task_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_task_name"
        android:layout_marginTop="20dp"
        android:autofillHints="@string/task_date"
        android:backgroundTint="@color/colorBasicText"
        android:drawableStart="@drawable/ic_baseline_calendar_today_26"
        android:drawablePadding="10dp"
        android:hint="@string/task_date"
        android:inputType="date"
        android:maxLines="1"
        android:textColor="@color/colorBasicText"
        android:textStyle="italic" />

    <CheckBox
        android:id="@+id/id_task_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_task_date"
        android:layout_marginTop="20dp"
        android:background="@drawable/checkbox_selector"
        android:button="@null"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/id_task_notification_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/id_task_type"
        android:layout_below="@id/id_task_date"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/id_task_notification"
        android:gravity="center_vertical"
        android:text="Send notification"
        android:textColor="@color/colorBasicText"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/id_task_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_task_notification"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/id_task_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_task_type"
        android:layout_marginTop="20dp"
        android:text="@string/task_for"
        android:textColor="@color/colorBasicText"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/id_select_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_task_type"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_baseline_check_26"
        android:text="@string/select_all"
        android:textColor="@color/colorBasicText"
        android:textSize="18sp" />

    <FrameLayout
        android:id="@+id/id_task_owners_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/id_save_task"
        android:layout_below="@id/id_task_owner"
        android:layout_marginTop="10dp"
        android:background="@drawable/activity_add_custom" />

    <Button
        android:id="@+id/id_save_task"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:text="@string/save" />

</RelativeLayout>